{
  "name": "phoenix",
  "productName": "Phoenix BURST Wallet",
  "version": "1.0.0-beta.1",
  "contributors": [
    "ohager"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/burst-apps-team/phoenix"
  },
  "license": "GPL-3.0",
  "description": "The BURST coin desktop wallet",
  "keywords": [
    "burst",
    "burstcoin",
    "wallet"
  ],
  "main": "main.js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "node ../../scripts/build.js --target desktop",
    "start": "cross-env NODE_ENV=develop && npm run build && electron .",
    "start:fast": "cross-env NODE_ENV=develop && electron .",
    "pack": "npm run build && electron-packager . Phoenix --overwrite --asar --prune=true --out=release-builds",
    "release:all": "npm run pack -- --all",
    "release:linux": "npm run pack -- --platform=linux --arch=x64 --icon=assets/images/png/1024x1024.png",
    "release:win32": "npm run pack -- --platform=win32 --arch=x64 --icon=assets/images/win/128x128_icon.ico",
    "release:macos": "npm run pack -- --platform=darwin --arch=x64 --icon=assets/images/mac/icon.icns"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "electron": "^4.0.1",
    "electron-packager": "^13.0.1"
  }
}
