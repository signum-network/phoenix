{
  "name": "signumjs",
  "version": "1.0.0",
  "description": "Signum Network Reference Library",
  "contributors": [
    "ohager",
    "blankey1337"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/signum-network/phoenix"
  },
  "engines": {
    "node": ">=12"
  },
  "license": "Apache-2.0",
  "private": false,
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-typescript": "^7.7.2",
    "@convergencelabs/typedoc-plugin-custom-modules": "^0.3.0",
    "@types/jest": "^24.0.23",
    "axios-mock-adapter": "^1.16.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^24.1.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "codecov": "^3.8.1",
    "custom-tslint-formatters": "^2.4.0",
    "husky": "^4.3.0",
    "jest": "^24.1.0",
    "jsdoc-babel": "^0.5.0",
    "jsdoc-to-markdown": "^5.0.2",
    "lerna": "^3.22.1",
    "regenerator-runtime": "^0.13.7",
    "ts-jest": "^24.0.2",
    "tslint": "^5.20.1",
    "typedoc": "^0.16.11",
    "typescript": "3.8.3"
  },
  "scripts": {
    "bootstrap": "lerna exec npm install && lerna bootstrap && lerna run tsc",
    "build": "npm run tsc && lerna exec npm run bundle",
    "clear": "lerna exec 'rm -rf node_modules out dist' && rm -rf node_modules",
    "doc": "typedoc --options tsdoc.json --listInvalidSymbolLinks",
    "lint": "tslint -p tsconfig.json -t stylish -s node_modules/custom-tslint-formatters/formatters -t grouped",
    "postinstall": "npm run bootstrap",
    "publish": "npm run build && lerna publish --force-publish --tag-version-prefix='burstjs-'",
    "readme": "lerna exec 'npm run readme'",
    "test": "jest",
    "test:ci": "jest --coverage && codecov",
    "test:e2e": "jest --config jest.config.e2e.js --runInBand --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "tsc": "lerna run tsc"
  },
  "husky": {
    "hooks": {
      "pre-push": "../pre-push.sh"
    }
  },
  "dependencies": {
    "axios": "^0.21.1"
  }
}
