{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "../out-tsc/app",
        "module": "esnext",
        "allowSyntheticDefaultImports": true,
    },
    "include": [
      "**/*.ts",
      "../../../lib/**/*.ts",
      "*.ts"
    ],
    "exclude": [
      "test.ts",
      "**/*.spec.ts",
      "../../../lib/**/*.spec.ts",
      "../../../lib/**/__tests__/**/*.ts",
      "../../../lib/**/dist/**/*.ts"
    ]
}
